!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Payment
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag "//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css", :media => "all"
    = javascript_include_tag "https://code.jquery.com/jquery-1.12.4.js"
    = javascript_include_tag "https://code.jquery.com/ui/1.12.0/jquery-ui.js"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  %body
    = render 'shared/navbar'
    #page-wrapper{:style =>'padding: 15px 15px;min-height: 600px;background:#F3F3F3;'}
      %center
        - flash.each do |name, msg|
          - if msg.is_a?(String)
            %div{:class => "alert alert-#{name == :notice ? "success" : "error"}"}
              = content_tag :div, msg, :id => "flash_#{name}"
      = yield
  :javascript
    $(".datepicker").datepicker({ dateFormat: "yy-mm-dd" });
